<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/topicbg"
    android:layout_gravity="center"

>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record"
            android:layout_width="281dp"
            android:layout_height="113dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/namerecorn"
            android:gravity="center"
            android:text="Records"
            android:textAppearance="@style/record" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/ach1"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"

                android:background="@drawable/d1">

            </TextView>
            <TextView
                android:id="@+id/ach2"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"

                android:background="@drawable/d2">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/ach3"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"

                android:background="@drawable/d3">

            </TextView>
            <TextView
                android:id="@+id/ach4"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"

                android:background="@drawable/d4">

            </TextView>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>